---
import "../styles/global.css";
import { ToasterProvider } from "../components/ToasterProvider";
import Header from "../components/Header.astro";
import Navigation from "../components/Navigation.astro";

interface Props {
  title?: string;
  showNavigation?: boolean;
}

const { title = "10x Cards - Twórz fiszki", showNavigation = true } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900 bg-fixed flex flex-col">
    {
      showNavigation && (
        <>
          <Header />
          <Navigation currentPath={currentPath} />
        </>
      )
    }

    <main class="container mx-auto px-2 sm:px-4 md:px-6 lg:px-8 py-4 flex-grow">
      <slot />
    </main>

    <footer class="mt-auto py-2 text-center text-white/70">
      <div class="container mx-auto px-4">
        <p class="text-xs">
          Stworzone z <span class="text-red-500 animate-pulse">❤️</span> przez{" "}
          <a
            href="https://www.linkedin.com/in/kaczmarek-patryk/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-white hover:text-purple-300 transition-colors duration-200 underline decoration-purple-400/50 hover:decoration-purple-300"
          >
            Patryk Kaczmarek
          </a>
        </p>
      </div>
    </footer>

    <ToasterProvider client:only="react" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
