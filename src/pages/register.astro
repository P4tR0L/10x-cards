 * 
 * Public page that allows new users to create an account.
 * - Redirects to homepage if user is already authenticated
 * - Shows RegisterForm component with email/password/confirm password fields
 * - Includes application logo and value proposition
 */

import Layout from "../layouts/Layout.astro";
import { RegisterForm } from "../components/RegisterForm";

// Check if user is already authenticated
const authToken = Astro.cookies.get("sb-access-token")?.value;

// If already authenticated, redirect to homepage
if (authToken) {
  return Astro.redirect("/");
}
