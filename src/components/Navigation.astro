---
interface Props {
  currentPath?: string;
}

const { currentPath = Astro.url.pathname } = Astro.props;

const navItems = [
  { href: "/", label: "Twórz", icon: "plus" },
  { href: "/manage", label: "Zarządzaj", icon: "collection" },
  { href: "/review", label: "Ucz się", icon: "academic" },
];

function isActive(href: string, current: string): boolean {
  if (href === "/") {
    return current === "/";
  }
  return current.startsWith(href);
}
---

<nav class="border-b border-white/10 bg-gradient-to-r from-indigo-800/50 via-purple-800/50 to-blue-800/50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex space-x-1 sm:space-x-2">
      {
        navItems.map((item) => {
          const active = isActive(item.href, currentPath);
          return (
            <a
              href={item.href}
              class={`
                flex items-center space-x-2 px-4 py-3 text-sm font-medium transition-colors
                ${
                  active
                    ? "text-white border-b-2 border-blue-400 bg-white/10"
                    : "text-white/70 hover:text-white hover:bg-white/5"
                }
              `}
              aria-current={active ? "page" : undefined}
            >
              {item.icon === "plus" && (
                <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M12 5v14M5 12h14"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              )}
              {item.icon === "collection" && (
                <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M3 7h18M3 12h18M3 17h18"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <rect x="3" y="4" width="18" height="16" rx="2" stroke="currentColor" stroke-width="2" fill="none" />
                </svg>
              )}
              {item.icon === "academic" && (
                <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M22 10v6M2 10l10-5 10 5-10 5z"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <path
                    d="M6 12v5c3 3 9 3 12 0v-5"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              )}
              <span>{item.label}</span>
            </a>
          );
        })
      }
    </div>
  </div>
</nav>
